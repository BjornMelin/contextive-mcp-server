{
  "$id": "https://contextive.dev/schemas/contextive-mcp-config.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contextive MCP Server Config",
  "type": "object",
  "properties": {
    "server": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["stdio", "http"]
        },
        "logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"]
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        }
      },
      "required": ["mode"],
      "additionalProperties": false
    },
    "providers": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "enabled": { "type": "boolean" },
          "defaultModel": { "type": "string" }
        },
        "required": ["enabled"],
        "additionalProperties": true
      }
    },
    "toolPacks": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "enabled": { "type": "boolean" }
        },
        "required": ["enabled"],
        "additionalProperties": true
      }
    },
    "workflows": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "tool": { "type": "string" },
                "model": { "type": "string" },
                "params": { "type": "object" },
                "prompt": { "type": "string" }
              },
              "additionalProperties": false
            }
          }
        },
        "required": ["steps"],
        "additionalProperties": false
      }
    }
  },
  "required": ["server"],
  "additionalProperties": false
}
